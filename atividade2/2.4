void ordenarpilha(int x, Pilha* a, Pilha* b) {

	if(x >= mostrartopo(a) && vazia(a) == 0 && cheia(a) == 0) {
		empilhar(b, desempilhar(a));
		ordenarpilha(x, a, b);
	} else {
		empilhar(a, x);
		return;
	}

	empilhar(a, desempilhar(b));
	
}
		


